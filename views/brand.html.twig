<!DOCTYPE html>
<html>
    <body>
        <div class="container">
            <a href="/"><button type="submit" class="btn btn-default">Home</button></a>
            <h1>Epic Shoe Store</h1>
            <h2>{{ brand.getName }}</h2>
            <div class="row">
                <div class="col-sm-8">
                    {% if brand_stores %}
                        <h4>Stores that carry {{ brand.getName }}:</h4>
                        {% for store in brand_stores %}
                            <h4><a href="/store/{{ store.getId }}">{{ store.getName }}</a></h4>
                        {% endfor %}
                        <form class="" action="/brand/{{ brand.getId }}/delete_stores" method="post">
                            <button type="submit" class="btn btn-danger">Delete All</button>
                        </form>
                    {% endif %}
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <form class="form-inline" action="/brand/{{ brand.getId }}/add_store" method="post">
                            <h5>Add a new Store that carries {{ brand.getName }}</h5>
                            <select name="store_id" class="form-control">
                                {% for store in all_stores %}
                                    <option value="{{ store.getId }}">{{ store.getName }}</option>
                                {% endfor %}
                            </select>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </form>
                    </div>
                    <!-- <div class="form-group">
                        <form class="form-inline" action="/brand/{{ brand.getId }}/edit_name" method="post">
                            <h5>Edit Brand Name</h5>
                            <input name="_method" type="hidden" value="patch">
                            <input type="text" name="edit_name">
                            <button type="submit" class="btn btn-success">Edit</button>
                        </form>
                    </div> -->
                </div>
            </div>
        </div>
    </body>
</html>
