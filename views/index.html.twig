<!DOCTYPE html>
<html>
    <body>
        <div class="container">
            <h1>Epic Shoe Directory</h1>
            <div class="row">
                <div class="col-sm-6">
                    <h3>Brands:</h3>
                    {% if brands %}
                        {% for brand in brands %}
                        <h4><a href="/brand/{{ brand.getId }}">{{ brand.getName }}</a></h4>
                        {% endfor %}
                        <form class="" action="/delete_brands" method="post">
                            <button type="submit" class="btn btn-danger">Delete All</button>
                        </form>
                    {% endif %}
                    <form class="form-inline" action="/add_brand" method="post">
                        <h5>Add a new Brand</h5>
                        <div class="form-group">
                            <input class="form-control" type="text" name="new_brand" placeholder="Name" required>
                        </div>
                        <button type="submit" class="btn btn-success">+</button>
                    </form>
                </div>
                <div class="col-sm-6">
                    <h3>Stores:</h3>
                    {% if stores %}
                        {% for store in stores %}
                            <h4><a href="/store/{{ store.getId }}">{{ store.getName }}</a></h4>
                        {% endfor %}
                        <form class="" action="/delete_stores" method="post">
                            <button type="submit" class="btn btn-danger">Delete All</button>
                        </form>
                    {% endif %}
                    <form class="form-inline" action="/add_store" method="post">
                        <h5>Add a new Store</h5>
                        <div class="form-group">
                            <input class="form-control" type="text" name="new_store" placeholder="Name" required>
                        </div>
                        <button type="submit" class="btn btn-success">+</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
